# ========================================
# CONFIGURAZIONE GESTIONALE FULLSTACK
# ========================================
# COPIA QUESTO FILE COME .env E COMPLETA I VALORI

# ========================================
# CONFIGURAZIONE DATABASE
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gestionale_ferrari
DB_USER=gestionale_user
DB_PASSWORD=gestionale_password
# DB_DEV_PASSWORD=INSERISCI_PASSWORD_DATABASE_SVILUPPO

# ========================================
# CONFIGURAZIONE JWT
# ========================================
JWT_SECRET=your_jwt_secret_key_for_development_only

# ========================================
# CONFIGURAZIONE MASTER PASSWORD
# ========================================
MASTER_PASSWORD=master123

# ========================================
# CONFIGURAZIONE EMAIL
# ========================================
# EMAIL_PRIMARY=INSERISCI_EMAIL_PRINCIPALE
# EMAIL_SECONDARY=INSERISCI_EMAIL_SECONDARIA
# EMAIL_ADMIN=INSERISCI_EMAIL_ADMIN

# ========================================
# CONFIGURAZIONE NAS/BACKUP
# ========================================
# NAS_IP=INSERISCI_IP_NAS
# NAS_SHARE=//INSERISCI_IP_NAS/backup_gestionale
# NAS_MOUNTPOINT=/mnt/backup_gestionale

# ========================================
# CONFIGURAZIONE SERVER
# ========================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# ========================================
# CONFIGURAZIONE DOCKER
# ========================================
# DOCKER_NETWORK=gestionale_network
# DOCKER_SUBNET=172.20.0.0/16

# ========================================
# CONFIGURAZIONE SICUREZZA
# ========================================
# GPG_RECIPIENT=INSERISCI_EMAIL_GPG
# SSL_EMAIL=INSERISCI_EMAIL_SSL

# ========================================
# CONFIGURAZIONE FRONTEND
# ========================================
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_TELEMETRY_DISABLED=1

# ========================================
# CONFIGURAZIONE BACKUP
# ========================================
# BACKUP_RETENTION_DAYS=30
# BACKUP_ENCRYPTION=true
# BACKUP_COMPRESSION=true

# ========================================
# CONFIGURAZIONE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/gestionale/app.log

# ========================================
# CONFIGURAZIONE MONITORING
# ========================================
# HEALTH_CHECK_INTERVAL=30
# HEALTH_CHECK_TIMEOUT=10
# HEALTH_CHECK_RETRIES=3

# ========================================
# CONFIGURAZIONE CORS
# ========================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ========================================
# CONFIGURAZIONE RATE LIMITING
# ========================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAZIONE SESSIONE
# ========================================
# SESSION_SECRET=INSERISCI_SESSION_SECRET
# SESSION_MAX_AGE=86400000

# ========================================
# CONFIGURAZIONE CACHE
# ========================================
# CACHE_TTL=3600
# CACHE_MAX_SIZE=100

# ========================================
# CONFIGURAZIONE NOTIFICHE
# ========================================
# NOTIFICATION_EMAIL=true
# NOTIFICATION_SMS=false
# NOTIFICATION_WEBHOOK=false

# ========================================
# CONFIGURAZIONE DEBUG
# ========================================
DEBUG=true
VERBOSE=false
TRACE=false

# ========================================
# CONFIGURAZIONE TEST
# ========================================
# TEST_DATABASE=gestionale_test
# TEST_USER=gestionale_test_user
# TEST_PASSWORD=INSERISCI_PASSWORD_TEST

# ========================================
# CONFIGURAZIONE DEPLOY
# ========================================
# DEPLOY_ENVIRONMENT=production
# DEPLOY_VERSION=1.0.0
# DEPLOY_TIMESTAMP=2025-07-30T11:25:53Z

# ========================================
# NOTE IMPORTANTI
# ========================================
# 1. NON COMMITTARE MAI IL FILE .env CON PASSWORD REALI
# 2. USARE SEMPRE VARIABILI D'AMBIENTE PER PASSWORD
# 3. IMPLEMENTARE DOCKER SECRETS PER PRODUZIONE
# 4. CIFRARE SEMPRE I BACKUP CON GPG
# 5. VERIFICARE PERMESSI FILE SENSIBILI (600)
# 6. AGGIORNARE .gitignore PER ESCLUDERE .env
# 7. DOCUMENTARE TUTTE LE VARIABILI
# 8. TESTARE CONFIGURAZIONE IN AMBIENTE ISOLATO DATABASE_URL=postgresql://gestionale_user:gestionale_password@localhost:5432/gestionale_ferrari
